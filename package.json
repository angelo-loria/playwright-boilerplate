{
  "name": "playwright-boilerplate",
  "version": "1.0.0",
  "description": "NodeJs Playwright boilerplate project",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write .",
    "test": "playwright test",
    "test:chromium": "playwright test --project=chromium",
    "test:ci": "CI=true playwright test",
    "test:debug": "playwright test --debug --project=chromium",
    "test:lighthouse": "CI=true playwright test --config=./tests/lighthouse/playwright.config.ts && node ./.scripts/tesults-lighthouse.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/angelo-loria/playwright-boilerplate.git"
  },
  "keywords": [],
  "author": "",
